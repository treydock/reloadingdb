<p id="notice"><%= notice %></p>

<h1>Bullets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grain</th>
      <th>Caliber</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bullets.each do |bullet| %>
      <tr>
        <td><%= bullet.name %></td>
        <td><%= bullet.grain %></td>
        <td><%= bullet.caliber %></td>
        <td><%= bullet.user %></td>
        <td><%= link_to 'Show', bullet %></td>
        <td><%= link_to 'Edit', edit_bullet_path(bullet) %></td>
        <td><%= link_to 'Destroy', bullet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

