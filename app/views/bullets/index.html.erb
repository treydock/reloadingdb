<h1>Bullets</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grain</th>
      <th>Caliber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bullets.each do |bullet| %>
      <tr>
        <td><%= bullet.name %></td>
        <td><%= bullet.grain %></td>
        <td><%= bullet.caliber %></td>
        <td><%= link_to 'Show', bullet, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_bullet_path(bullet), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', bullet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bullet', new_bullet_path, class: 'btn btn-primary' %>
