<%= simple_form_for @bullet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@bullet[:name]) %>
  <%= f.input :grain %>
  <%= error_span(@bullet[:grain]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bullets_path, :class => 'btn btn-default' %>
<% end %>
