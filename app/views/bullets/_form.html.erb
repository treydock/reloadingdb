<%= simple_form_for(@bullet) do |f| %>
  <%= render 'form_errors', f: f %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :grain %>
    <%= f.association :caliber, collection: @calibers %>
    <%= f.input :ballistic_coefficient do %>
      <%= f.input_field :ballistic_coefficient, class: 'col-sm-3' %>
      <%= f.label 'Unit:', class: 'col-sm-2 col-lg-1 text-sm-right' %>
      <%= f.input_field :ballistic_coefficient_unit, as: :select, collection: Unit.ballistic_coefficient, class: 'col-sm-2' %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary'  %>
  </div>
<% end %>
