<%= index_header(ShootingGroup) %>

<%= search_bar(ShootingGroup) %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= sort_link 'shooting_logs.date', 'Name' %></th>
      <th>Load</th>
      <th>Group size</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shooting_groups.each do |shooting_group| %>
      <tr>
        <td><%= link_to shooting_group.name, shooting_group %></td>
        <td><%= shooting_group.load.name %></td>
        <td><%= shooting_group.group_size %></td>
        <td><%= index_actions(shooting_group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
