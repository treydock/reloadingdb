<%= simple_form_for(@shooting_log, validate: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :date, as: :date, html5: true %>
    <%= f.input :time, as: :time, html5: true %>
    <%= f.association :shooting_location, collection: @shooting_locations %>
    <%= f.input :temperature %>
    <%= f.input :pressure %>
    <%= f.input :humidity %>
    <%= f.input :wind_speed %>
    <%= f.input :wind_direction %>
    <%= f.input :angle %>
    <%= f.input :conditions %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
