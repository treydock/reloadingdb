<h1>Brasses</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Caliber</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brasses.each do |brass| %>
      <tr>
        <td><%= brass.name %></td>
        <td><%= brass.caliber_id %></td>
        <td><%= link_to 'Show', brass, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_brass_path(brass), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', brass, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brass', new_brass_path, class: 'btn btn-primary' %>
