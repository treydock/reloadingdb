<%= simple_form_for(@brass) do |f| %>
  <%= render 'form_errors', f: f %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :caliber, collection: @calibers, label_method: :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
