<h1>Powders</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @powders.each do |powder| %>
      <tr>
        <td><%= powder.name %></td>
        <td><%= link_to 'Show', powder, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_powder_path(powder), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', powder, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Powder', new_powder_path, class: 'btn btn-primary' %>
