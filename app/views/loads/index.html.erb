<%= index_header(Load) %>

<%= search_bar(Load) %>

<table class='table table-striped table-condensed table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= sort_link 'date' %></th>
      <th>Bullet</th>
      <th>Powder</th>
      <th>Primer</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= link_to load.id, load %></td>
        <td><%= link_to load.date, load %></td>
        <td><%= load.bullet.name_caliber_grain %></td>
        <td><%= load.powder.name %> - <%= load.powder_weight %> gr</td>
        <td><%= load.primer.name %></td>
        <td>
          <%= index_actions(load) do %>
            <%= link_to('Clone', clone_load_path(load), class: 'dropdown-item') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination(Load) %>
