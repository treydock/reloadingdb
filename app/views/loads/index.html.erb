<%= index_header(Load) %>

<%= search_bar(Load) %>

<table class='table table-striped table-condensed table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= sort_link 'date' %></th>
      <th>Bullet</th>
      <th>Powder</th>
      <th>Primer</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= link_to load.id, load %></td>
        <td><%= link_to load.date, load %></td>
        <td><%= load.bullet.name_caliber_grain %></td>
        <td><%= load.powder.name %> - <%= load.powder_weight %> gr</td>
        <td><%= load.primer.name %></td>
        <td><%= index_actions(load) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='container'>
  <div class='row'>
    <div class='col-3'>
<%= form_tag loads_path, method: :get, id: 'per_page_form' do %>
  <%= hidden_field_tag :column, params[:column] %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= select_tag :per_page, options_for_select([15,25,50,100], selected: (params[:per_page] || Load.default_per_page)) %>
  <%= label_tag 'per page' %>
<% end -%>
    </div>
    <div class='col-7 offset-2'>
<%= paginate @loads, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
<br>
