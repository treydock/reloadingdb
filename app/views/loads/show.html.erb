<%= show_header(@load) %>

<dl class='dl-horizontal'>
  <dt>ID:</dt>
  <dd><%= @load.id %></dd>

  <dt>Date:</dt>
  <dd><%= @load.date %></dd>

  <dt>Brass:</dt>
  <dd><%= @load.brass.name_caliber %></dd>

  <dt>Brass length:</dt>
  <dd><%= @load.brass_length %></dd>

  <dt>Brass uses:</dt>
  <dd><%= @load.brass_uses %></dd>

  <dt>Bullet:</dt>
  <dd><%= @load.bullet.name_grain_caliber %></dd>

  <dt>Powder:</dt>
  <dd><%= @load.powder.name %></dd>

  <dt>Powder weight:</dt>
  <dd><%= @load.powder_weight %></dd>

  <dt>Primer:</dt>
  <dd><%= @load.primer.name %></dd>

  <dt>COL:</dt>
  <dd><%= @load.col %></dd>

  <dt>Run Out:</dt>
  <dd><%= @load.run_out %></dd>

  <dt>Speed:</dt>
  <dd><%= @load.speed %></dd>

  <dt>Number of Rounds:</dt>
  <dd><%= @load.rounds %></dd>

  <dt>Notes:</dt>
  <dd><%= simple_format @load.notes %></dd>
</dl>
