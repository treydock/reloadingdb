<% if f.object.errors.any? %>
  <div class="alert alert-danger" id="error_explanation">
    <div>
      The form contains <%= pluralize(f.object.errors.count, "error") %>.
    </div>
    <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
